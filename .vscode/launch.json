{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "cwd": "${workspaceFolder}/packages/radio/",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev", "config-dev.yml"],
      "env": {
        "LOG_PRETTY": "hide-date,use-colors",
        "FORCE_COLOR": "3",
        "UV_THREADPOOL_SIZE": "20"
      },
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "outputCapture": "std",
      "smartStep": true,
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
    }
  ],
}
