{
  "name": "medley",
  "version": "0.1.0",
  "description": "Monorepo for Medley, audio engine for Node.js",
  "author": {
    "name": "Wittawas Nakkasem",
    "email": "vittee@hotmail.com"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "turbo run clean",
    "build:radio": "turbo run build --filter=@seamless-medley/radio",
    "combine-discord": "turbo run combine-discord --filter=@seamless-medley/radio",
    "postinstall": "is-ci || husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/copyfiles": "^2.4.1",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.15.11",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mkdirp": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.6",
    "turbo": "^1.9.1",
    "type-fest": "^3.8.0",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*"
      ],
      "allowedVersions": {
        "@discordjs/opus": "0.9"
      }
    },
    "allowedDeprecatedVersions": {
      "@floating-ui/react-dom-interactions": "*",
      "@npmcli/move-file": "*",
      "string-similarity": "*"
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [2, "always", 200]
    }
  }
}
