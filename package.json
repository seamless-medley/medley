{
  "name": "medley",
  "version": "0.1.0",
  "description": "Monorepo for Medley, audio engine for Node.js",
  "author": {
    "name": "Wittawas Nakkasem",
    "email": "vittee@hotmail.com"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "turbo run clean",
    "build:radio": "turbo run build --filter=@seamless-medley/radio",
    "combine-discord": "turbo run combine-discord --filter=@seamless-medley/radio",
    "postinstall": "is-ci || husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/copyfiles": "^2.4.2",
    "@types/fs-extra": "^11.0.3",
    "@types/lodash": "^4.14.200",
    "@types/node": "^18.15.11",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "fs-extra": "^11.2.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "turbo": "^1.11.1",
    "type-fest": "^4.8.3",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*"
      ],
      "allowedVersions": {
        "@discordjs/opus": "0.9"
      }
    },
    "allowedDeprecatedVersions": {
      "@floating-ui/react-dom-interactions": "*",
      "@npmcli/move-file": "*",
      "string-similarity": "*"
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        200
      ]
    }
  }
}
