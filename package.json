{
  "name": "medley",
  "version": "0.1.0",
  "description": "Monorepo for Medley, audio engine for Node.js",
  "author": {
    "name": "Wittawas Nakkasem",
    "email": "vittee@hotmail.com"
  },
  "license": "GPL-3.0",
  "scripts": {
    "clean": "turbo run clean",
    "build": "turbo run build",
    "package": "turbo run package --filter=@seamless-medley/radio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.8",
    "husky": "^9.1.4",
    "turbo": "^2.4.4",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*"
      ],
      "allowedVersions": {
        "@discordjs/opus": "0.9",
        "rimraf": "3.0.2"
      }
    },
    "allowedDeprecatedVersions": {
      "babel-merge": "*",
      "are-we-there-yet": "*",
      "npmlog": "*",
      "gauge": "*",
      "glob": "*",
      "inflight": "*",
      "rimraf": "*",
      "node-domexception": "*"
    },
    "overrides": {
      "typescript": "5.9.2",
      "micromatch": ">=4.0.8"
    },
    "onlyBuiltDependencies": [
      "@discordjs/opus",
      "@parcel/watcher",
      "@swc/core",
      "bufferutil",
      "esbuild",
      "ffmpeg-static",
      "mediasoup"
    ]
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        200
      ]
    }
  }
}
