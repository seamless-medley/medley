{
  "name": "medley",
  "version": "0.1.0",
  "description": "Monorepo for Medley, audio engine for Node.js",
  "author": {
    "name": "Wittawas Nakkasem",
    "email": "vittee@hotmail.com"
  },
  "license": "GPL-3.0",
  "scripts": {
    "clean": "turbo run clean",
    "build:radio": "turbo run build --filter=@seamless-medley/radio",
    "combine-discord": "turbo run combine-discord --filter=@seamless-medley/radio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/copyfiles": "^2.4.2",
    "@types/fs-extra": "^11.0.3",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.14.8",
    "copyfiles": "^2.4.1",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.4",
    "is-ci": "^3.0.1",
    "mkdirp": "^3.0.1",
    "turbo": "^2.2.4",
    "type-fest": "^4.8.3",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@10.6.2",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*"
      ],
      "allowedVersions": {
        "@discordjs/opus": "0.9",
        "rimraf": "3.0.2"
      }
    },
    "allowedDeprecatedVersions": {
      "babel-merge": "*",
      "are-we-there-yet": "*",
      "npmlog": "*",
      "gauge": "*",
      "glob": "*",
      "inflight": "*",
      "rimraf": "*"
    },
    "overrides": {
      "typescript": "5.4.5",
      "micromatch": ">=4.0.8"
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        200
      ]
    }
  }
}
