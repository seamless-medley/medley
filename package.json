{
  "name": "medley",
  "version": "0.1.0",
  "description": "Monorepo for Medley, audio engine for Node.js",
  "author": {
    "name": "Wittawas Nakkasem",
    "email": "vittee@hotmail.com"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "turbo run clean",
    "build-radio": "turbo run build --filter=@seamless-medley/utils --filter=@seamless-medley/core --filter=@seamless-medley/radio"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.11.18",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.2",
    "turbo": "^1.7.0",
    "type-fest": "^3.5.4",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*"
      ],
      "allowedVersions": {
        "@discordjs/opus": "0.9"
      }
    },
    "allowedDeprecatedVersions": {
      "@floating-ui/react-dom-interactions": "*"
    }
  }
}
