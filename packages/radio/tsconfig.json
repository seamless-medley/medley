{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap" : true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
