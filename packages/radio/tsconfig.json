{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap" : true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "references": [
    {
      "path": "../core"
    }
  ]
}
