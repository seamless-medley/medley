{
  "name": "medley-app",
  "version": "0.0.0",
  "description": "",
  "main": "bundle/main.js",
  "author": "",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "electron .",
    "build": "webpack --config webpack.main.js",
    "pack": "electron-builder"
  },
  "dependencies": {
    "@medley/medley": "file:../node-medley"
  },
  "browserslist": "electron 11.2",
  "build": {
    "appId": "com.github.vittee.medley",
    "files": [
      "!**/*",
      "./bundle/**/*"
    ],
    "extraFiles": [
      "./build/Release/medley.node"
    ],
    "asar": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  }
}
