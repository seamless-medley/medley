{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": false,
    "declaration": false,
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap" : true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "include": ["src"]
}
