{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "allowJs": true,
    "declaration": false,
    "isolatedModules": true,
    "removeComments": true,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap" : true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src"]
}
