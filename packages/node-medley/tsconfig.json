{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "allowJs": false,
    "declaration": false,
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "out"
  },
  "include": ["src"]
}
